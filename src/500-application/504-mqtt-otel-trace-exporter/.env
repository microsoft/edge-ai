# MQTT OTEL Trace Exporter environment template

# Logging
APP_LOG_LEVEL=info

# OpenTelemetry exporter
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=mqtt-otel-trace-exporter
OTEL_SERVICE_NAMESPACE=edge-ai
OTEL_SERVICE_INSTANCE_ID=
OTEL_TRACES_SAMPLER_ARG=1.0
OTEL_BSP_MAX_EXPORT_BATCH_SIZE=512
OTEL_BSP_MAX_QUEUE_SIZE=2048
OTEL_BSP_SCHEDULE_DELAY=5000
OTEL_BSP_EXPORT_TIMEOUT=30000

# MQTT client
MQTT_BROKER_HOST=
MQTT_BROKER_PORT=1883
MQTT_TOPIC_FILTERS=telemetry/#
MQTT_SHARED_SUBSCRIPTION=edge-ai
MQTT_SESSION_EXPIRY_SECS=86400
MQTT_RECEIVE_MAX=128
MQTT_KEEP_ALIVE_SECS=30
MQTT_RETRY_MIN_BACKOFF_SECS=5
MQTT_RETRY_MAX_BACKOFF_SECS=60
MQTT_USE_TLS=false
MQTT_CLIENT_ID=
MQTT_SAT_TOKEN_PATH=
MQTT_CA_CERT_PATH=
MQTT_X509_CERT_PATH=
MQTT_X509_KEY_PATH=

# Correlation handling
CORRELATION_ID_FIELD=correlationId
CORRELATION_ALLOW_GENERATED=true

# Health endpoints
HTTP_HEALTH_ADDR=0.0.0.0:8080
HTTP_HEALTH_LIVENESS_PATH=/healthz
HTTP_HEALTH_READINESS_PATH=/readyz
