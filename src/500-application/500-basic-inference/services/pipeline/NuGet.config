<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Clear all default package sources to ensure explicit control -->
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>

  <!-- Global NuGet configuration settings -->
  <config>
    <!-- Set global packages folder for consistent package location -->
    <add key="globalPackagesFolder" value="packages" />
  </config>
</configuration>
