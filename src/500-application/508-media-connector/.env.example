# Media Connector Development Environment Configuration
# Copy this file to .env and update with your values
#
# WARNING: This is for LOCAL DEVELOPMENT ONLY
# Production deployments use Azure IoT Operations MQTT broker with managed authentication

# =============================================================================
# RTSP Camera Configuration (Mock Cameras)
# =============================================================================
RTSP_CAMERA_USERNAME=admin
RTSP_CAMERA_PASSWORD=password

# =============================================================================
# MinIO Configuration (Development Storage)
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# =============================================================================
# Grafana Configuration (Development Monitoring)
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# =============================================================================
# Development Settings
# =============================================================================
# Set to 'true' to enable debug logging
DEBUG_MODE=false

# MQTT Broker port (default: 1883)
MQTT_PORT=1883

# HTTP Media Server port (default: 8080)
HTTP_SERVER_PORT=8080

# Prometheus port (default: 9090)
PROMETHEUS_PORT=9090

# Grafana port (default: 3000)
GRAFANA_PORT=3000
