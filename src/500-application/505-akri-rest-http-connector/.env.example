# Environment variables for Akri REST HTTP Connector Development
# Copy this file to .env and modify as needed

# MQTT Broker Configuration
AIO_MQTT_USE_TLS=false
AIO_MQTT_CLIENT_ID=akri-rest-connector-test
AIO_BROKER_HOSTNAME=mosquitto-broker
AIO_BROKER_TCP_PORT=1883

# REST Endpoint URLs (internal Docker network)
WEATHER_ENDPOINT=http://weather-station:8080/api/weather
SENSOR_ENDPOINT=http://sensor-simulator:8081/api/sensor/data
AUTH_ENDPOINT=http://authenticated-device:8082/api/device/status

# Authentication for secured endpoints
AUTH_USERNAME=deviceuser
AUTH_PASSWORD=devicepass123

# MQTT Topic Configuration
WEATHER_TOPIC=akri/weather-station-001/data
SENSOR_TOPIC=akri/generic-sensor-001/data
AUTH_DEVICE_TOPIC=akri/auth-device-001/status
ERROR_TOPIC=akri/errors

# Polling Configuration
POLLING_INTERVAL_SECONDS=30
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5

# Device Configuration
WEATHER_DEVICE_ID=weather-station-001
SENSOR_DEVICE_ID=generic-sensor-001
AUTH_DEVICE_ID=auth-device-001

# Logging
RUST_LOG=info

# Mock Service Configuration
WEATHER_LOCATION=Seattle
SENSOR_TYPE=temperature-humidity
