{
    "json.schemaDownload.enable": true,

    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    "diffEditor.ignoreTrimWhitespace": false,

    "editor.insertSpaces": true,

    "markdownlint.configFile": ".markdownlint.json",

    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.wordWrap": "on",
        "editor.detectIndentation": false,
    },

    "[terraform-vars]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },

    "[terraform-test]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },

    "[terraform]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },

    "[bicep]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },

    "[shellscript]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },

    "[csharp]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
    },

    "[python]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
    },

    "yaml.schemas": {
        "https://raw.githubusercontent.com/microsoft/azure-pipelines-vscode/master/service-schema.json": "*-pipelines.yml",
        "https://squidfunk.github.io/mkdocs-material/schema.json": "mkdocs.yml",
    },
    "yaml.customTags": [
        "!ENV scalar",
        "!ENV sequence",
        "!relative scalar",
        "tag:yaml.org,2002:python/name:material.extensions.emoji.to_svg",
        "tag:yaml.org,2002:python/name:material.extensions.emoji.twemoji",
        "tag:yaml.org,2002:python/name:pymdownx.superfences.fence_code_format",
        "tag:yaml.org,2002:python/object/apply:pymdownx.slugs.slugify mapping"
    ],
    "github.copilot.chat.codeGeneration.useInstructionFiles": true,
    "github.copilot.chat.commitMessageGeneration.instructions": [
        {
            "text": "Use Conventional Commit Messages."
        },
        {
            "text": "Everything is in present tense."
        },
        {
            "text": "Types include, feat, fix, refactor, perf, style, test, docs, build, ops, chore"
        },
        {
            "text": "Scope includes, (prompts), (settings), (cloud), (edge), (application), (tools), (resource-group), (security-identity), (observability), (data), (fabric), (messaging), (vm-host), (cncf-cluster), (iot-ops), (observability), (messaging), (blueprints), (terraform), (bicep), (scripts), (adrs), (build)."
        },
        {
            "text": "Description is short 100 characters or less. e.g. 'feat: update logic with new feature', 'chore: cleaned up and moved code from A to B', 'feat(iot-ops)!: add parameters to take name instead of id'"
        },
        {
            "text": "e.g. 'feat: update logic with new feature', 'chore(settings): cleaned up and moved code from A to B', 'feat(iot-ops): add parameters to take name instead of id'"
        },
        {
            "text": "Body starts with a blank line and includes a summarized bulleted list of changes that's less than 300 characters."
        },
        {
            "text": "Footer always starts with a blank line and includes an emoji that represents the change then ' - Generated by Copilot'"
        },
    ]
}
