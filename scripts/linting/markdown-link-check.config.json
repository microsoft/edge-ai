{
  "timeout": "20s",
  "retryOn429": true,
  "ignorePatterns": [
    { "pattern": "\\{\\{[A-Z0-9_]+\\}\\}" },
    { "pattern": "^mailto:" },
    { "pattern": "^tel:" },
    { "pattern": "\\?id=" },
    { "pattern": "^/\\.github/workflows/" },
    { "pattern": "^/\\.azdo/templates/" },
    { "pattern": "^vscode:" },
    { "pattern": "^/README\\.md$" }
  ],
  "replacementPatterns": [
    { "pattern": "^/([^#]+)(#.+)?$", "replacement": "{{BASEURL}}/$1.md$2" }
  ]
}
